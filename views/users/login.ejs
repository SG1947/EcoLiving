<% layout("/layouts/boilerplate")%>
  <body>
    <h1 class="col-6 offset-3" >Login to Wanderlust</h1>
    <div class="row">
    <div class="col-6 offset-3">
    
    <form method="POST" action="/login" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input 
          name="username" 
          id="username" 
          type="text"
          class="form-control"
          required />
      </div>
       
          
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input 
          name="password" 
          id="password" 
          type="password"
          class="form-control"
          required />
      </div>
      <button class="btn btn-dark btn-custom" >Login</button>
    </form>
    </div>
  </div>
  </body>
